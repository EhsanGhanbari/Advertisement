@using Advertisement.Application.ViewModel
@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>قاصدک | ورود به سامانه</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" type="text/css" href="/Content/themes/impression/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="//cdn.rawgit.com/morteza/bootstrap-rtl/v3.3.4/dist/css/bootstrap-rtl.min.css">
    <!-- Main Style -->
    <link rel="stylesheet" type="text/css" href="/Content/themes/impression/assets/css/main.css">
    <!-- Responsive Style -->
    <link rel="stylesheet" type="text/css" href="/Content/themes/impression/assets/css/responsive.css">
    <!-- Fonts -->
    <link rel="stylesheet" type="text/css" href="/Content/themes/impression/assets/fonts/font-awesome.min.css">
    <!-- Icon -->
    <link rel="stylesheet" type="text/css" href="/Content/themes/impression/assets/fonts/simple-line-icons.css">
    <!-- Color CSS Styles  -->
    <link rel="stylesheet" type="text/css" href="/Content/themes/impression/assets/css/colors/purple.css" media="screen" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <link href="/Content/themes/impression/assets/impressionfa.css" rel="stylesheet" />
</head>
<body>

    <!-- Header Area wrapper Starts -->
    <header id="header-wrap">
        <!-- Roof area Starts -->
        <div id="roof" class="hidden-xs">
            <div class="container">
                <div class="col-md-6 col-sm-6">
                    <div class="info-bar-address">
                        <i class="icon-location-pin"></i> ایران، تهران
                    </div>
                </div>
                <div class="col-md-6 col-sm-6">
                    <!-- Quick Contacts Starts -->
                    <div class="quick-contacts">
                        @*<span><i class="icon-phone"></i> (00) 123 456 789</span>*@
                        <span><i class="icon-envelope"></i><a href="#">info@Qasedak-Adv.com</a></span>
                    </div>
                    <!-- Quick Contacts End -->
                </div>
            </div>
        </div>
        <!-- Roof area End -->
    </header>
    <!-- Header Area wrapper End -->
    <!-- Call to action Section -->
    <div class="container" style="width:100%;">
        <div class="row">
            <div class="col-md-6">
                <div id="loginBox">
                    <div class="row text-center" style="margin-top:20px;">
                        <h1>ورود به سامانه قاصدک</h1>
                    </div>
                    <form method="post" action="@Url.Action("Login")">
                        <div class="row text-center">
                            <div class="col-md-12">
                                <label>نام کاربری</label>
                                <br />@Html.TextBoxFor(x=>x.Email)
                                @*<input type="text" />*@
                            </div>
                            <div class="col-md-12">
                                <label>کلمه عبور</label>
                                <br />
                                <input type="password"  name="password"/>
                            </div>
                            <div class="col-md-12">
                                <br />
                                <input type="submit" class="btn btn-success" value="ورود" />
                                <br />
                                <br />
                            </div>
                            <br />
                        </div>
                    </form>
                    
                    <hr />
                    <div class="row" style="margin-top:20px;">
                        <div class="text-center">
                            <h1>عضویت در سامانه قاصدک</h1>
                        </div>
                        <div style="padding:0 30px;">
                            <span>
                                با عضویت در سایت "قاصدک" میتونید از خدمات تبلیغاتی ما استفاده کنید.
                            </span>
                            <ul>
                                <li>ثبت نرم افزار برای مشارکت در سیستم تبلیغاتی</li>
                                <li>ثبت محصول به منظور نمایش رد نرم افزار های گوناگون</li>
                            </ul>
                        </div>
                        <div class="text-center">
                            <a href="@Url.Action("Register" , "Users")" class="btn btn-danger">عضویت</a>
                            <br />
                            <br />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <img class="img-responsive" src="~/Content/themes/impression/images/adv1.jpg"  />
            </div>
        </div>
    </div>
    <!-- Call to action Section End -->
    <!-- Main contetn End -->
    <!-- Copytight Start -->
    <section id="copyright">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p class="copyright-text text-center">
                        ©Designed and Developed by
                        <a href="http://graygrids.com/">
                            GrayGrids
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </section>
    <!-- Copytight End -->
    <!-- Go to Top Link -->
    <a href="#" class="back-to-top">
        <i class="icon-arrow-up"></i>
    </a>

    <!-- jQuery Load -->
    <script src="/Content/themes/impression/assets/js/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="/Content/themes/impression/assets/js/bootstrap.min.js"></script>
    <!-- Smooth scroll JS -->
    <script src="/Content/themes/impression/assets/js/smooth-scroll.js"></script>
    <!-- Slicknav js -->
    <script src="/Content/themes/impression/assets/js/jquery.slicknav.js"></script>
    <!--  Nivo lightbox Js -->
    <script src="/Content/themes/impression/assets/js/nivo-lightbox.js"></script>
    <!-- Contact Form Scripts -->
    <script src="/Content/themes/impression/assets/js/form-validator.min.js"></script>
    <script src="/Content/themes/impression/assets/js/contact-form-script.js"></script>

    <!-- All Js plugin -->
    <script src="/Content/themes/impression/assets/js/main.js"></script>
    <!-- Map JS -->
    <script type="text/javascript" src="/Content/themes/impression/assets/js/jquery.mapit.min.js"></script>
    <script src="/Content/themes/impression/assets/js/initializers.js"></script>

</body>
</html>
